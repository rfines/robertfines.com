generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Auth.js v5 required models
model User {
  id              String           @id @default(cuid())
  name            String?
  email           String?          @unique
  emailVerified   DateTime?
  image           String?
  accounts        Account[]
  sessions        Session[]
  resumes           Resume[]
  tailoredResumes   TailoredResume[]
  termFeedback      TermFeedback[]
  marketingConsent  Boolean?
  plan              String           @default("free")
  role              String           @default("user")
  stripeCustomerId      String?          @unique
  stripeSubscriptionId  String?          @unique
  monthlyRunLimit       Int?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Resume {
  id              String           @id @default(cuid())
  userId          String
  title           String
  rawText         String           @db.Text
  s3Key           String?
  fileType        String?
  candidateName   String?          // Agency plan: whose resume this is
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  tailoredResumes TailoredResume[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model TailoredResume {
  id             String   @id @default(cuid())
  userId         String
  resumeId       String
  jobTitle       String
  company        String?
  jobDescription String   @db.Text
  tailoredText   String   @db.Text
  tokensUsed            Int?
  intensity             String?
  coverLetterText       String?  @db.Text
  coverLetterTokensUsed Int?
  variationGroup        String?
  variationIndex        Int      @default(0)
  userInstructions      String?  @db.Text
  jdSkills              String?  @db.Text  // JSON array of skills extracted from JD by Claude
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  resume         Resume   @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())
}

// Sliding-window rate limit counters per (userId, action, window bucket)
model RateLimitEntry {
  id        String @id @default(cuid())
  userId    String
  action    String
  windowKey Int    // floor(unixTimeSecs / windowSecs) — identifies the bucket

  @@index([userId, action, windowKey])
  @@index([action, windowKey]) // for cleanup queries
}

// Stripe webhook idempotency — prevents double-processing on Stripe retries
model ProcessedStripeEvent {
  id          String   @id  // Stripe event ID (evt_xxx)
  processedAt DateTime @default(now())

  @@index([processedAt])
}

// Layer 1: logs keyword match results for analytics (one entry per tailored resume, upserted on view)
model KeywordMatchLog {
  id               String   @id @default(cuid())
  userId           String
  tailoredResumeId String   @unique
  score            Int
  total            Int
  missingTerms     String   @db.Text  // JSON array of up to 30 missing terms

  createdAt        DateTime @default(now())

  @@index([createdAt])
}

// Layer 2: admin-curated additions to the global stop word list
model CustomStopWord {
  word      String   @id
  addedAt   DateTime @default(now())
  addedBy   String   // userId of admin who added it
}

// Layer 3: user-flagged terms that are not relevant skills
model TermFeedback {
  id               String   @id @default(cuid())
  userId           String
  tailoredResumeId String
  term             String
  createdAt        DateTime @default(now())

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, tailoredResumeId, term])
  @@index([term])
}
